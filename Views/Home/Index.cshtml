@model List<Employee>

@{
    ViewBag.Title = "Employee List";
}



<div><h1>Employee List</h1></div>

<table class="table mt-2">
    <thead>
        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Department</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Department</td>
                <td>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                        View
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
@section Scripts {
    <script src="~/js/customscript.js"></script>
}