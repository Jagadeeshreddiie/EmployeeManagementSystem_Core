@model HomeDetailsViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="card d-flex flex-column text-center" style="width:auto;max-width:500px;">
    <div class="card-header">
        <h4>Details of the Employee</h4>
    </div>
    <div class="card-body">
        <div class="card-group">
            <p>
                <strong>Name : </strong>
            </p><p>
                @Model.employee.Name
            </p>
        </div>
        <div class="card-group">
            <p>
                <strong>Email : </strong>
            </p><p>
                @Model.employee.Email
            </p>
        </div>
        <div class="card-group">
            <p>
                <strong>Department : </strong>
            </p><p>
                @Model.employee.Department
            </p>
        </div>
    </div>
    <div class="card-footer">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">
            Back
        </a>
    </div>
</div>